{
  "$schema": "https://turborepo.com/schema.json",

  "ui": "tui",

  "globalEnv": ["NODE_ENV", "DATABASE_URL", "DATABASE_AUTH_TOKEN", "NEXT_PUBLIC_VERCEL_ENV", "FRONTEND_BASE_URL", "SERVER_BASE_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"],

  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULTS$",
        ".env",
        ".env.local",
        ".env.production",
        "src/**"
      ],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "dev": {
      "inputs": [
        "$TURBO_DEFAULTS$",
        ".env",
        ".env.local",
        ".env.production"
      ],
      "cache": false,
      "persistent": true
    },

    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**"]
    },

    "format": {
      "cache": false
    }
  }
}
